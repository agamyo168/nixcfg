{
  "layer": "top",
  "modules-left": ["group/distro", "niri/window"],
  "modules-center": ["niri/workspaces"],
  "modules-right": [
    "mpris",
    "network",
    "group/system",
    "tray",
    "custom/notification",
  ],
  "group/distro": {
    "orientation": "horizontal",
    "modules": ["custom/distro", "clock"],
  },
  "group/system": {
    "orientation": "horizontal",
    "modules": ["niri/language", "gamemode", "pulseaudio", "disk"],
  },
  // --- NIRI ---
  "niri/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "urgent": "ÔÅ™",
      "active": "ÔÑë",
      "visible": "ÔÑë",
      "default": "ÔÑë",
      "empty": "Ôí™",
    },
  },

  "niri/language": {
    "format": "ÔÑú  {short}",
    "tooltip-format": "{long}",
  },
  "niri/window": {
    "format": "{title}",
    "swap-icon-label": true,
    "separate-outputs": true,
    "rewrite": {
      "(.*) - Mozilla Firefox": "üåé $1",
      "(.*) - zsh": "> [$1]",
    },
  },
  // --- Default Modules ---
  "network": {
    "format-wifi": "Ôá´ {essid} ({signalStrength}%)",
    "format-ethernet": "Û∞àÄ  {ifname}",
    "format-linked": "No Internet ‚ö†",
    "format-disconnected": "ÔÑß  Disconnected",
    "tooltip-format": "{ifname}  {ipaddr}/{cidr}\n{gwaddr}",
  },
  "tray": {
    "icon-size": 21,
    "spacing": 10,
  },
  "clock": {
    "format": "{:%H:%M} ÔÄó ",
    "format-alt": "{:%a, %d. %b  %H:%M}",
    "tooltip": false,
  },
  "mpris": {
    "format": "{player_icon} {status_icon} {dynamic}",
    "format-paused": "{player_icon} {status_icon} <i>{dynamic}</i>",
    "max-length": 45,
    "player-icons": {
      "chromium": "Ôâ® ", // Icon for Chromium browser
      "default": "ÔÖÑ ", // Default player icon
      "firefox": "Ôâ© ", // Icon for Firefox browser
      "mpv": "ÔÖÑ ", // Icon for MPV media player
      "spotify": "ÔÜº ", // Icon for Spotify
    },
    "status-icons": {
      "paused": "ÔÅå", // Icon when media is paused
      "playing": "ÔÅã", // Icon when media is playing
      "stopped": "ÔÅç", // Icon when media is stopped
    },
  },
  "disk": {
    "format": "ÔÇ†  {percentage_used}%",
  },

  // gamemode block
  "gamemode": {
    "format": "Û∞ä¥",
    "format-alt": "{glyph}",
    "glyph": "Û∞ä¥",
    "hide-not-running": true,
    "use-icon": true,
    "icon-name": "input-gaming-symbolic",
    "icon-spacing": 4,
    "icon-size": 20,
    "tooltip": true,
    "tooltip-format": "Games running: {count}",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "{icon} {volume}%",
    "format-icons": {
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
      "default-muted": "Û∞ùü",
      "headphone": "Û∞ãã",
      "headphone-muted": "Û∞üé",
      "headset": "Û∞ãé",
      "headset-muted": "Û∞ãê",
    },
    "scroll-step": 5,
    "escape": true,
    "tooltip-format": "Output Device: {desc}",
    "on-click": "pavucontrol",
  },

  // ---CUSTOM ---
  "custom/distro": {
    "format": "Û±ÑÖ",
    "on-click": "fuzzel",
    "tooltip": false,
  },
  "custom/notification": {
    "tooltip": true,
    "format": "<span size='16pt'>{icon}</span>",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ç†",
      "dnd-none": "Û∞™ì",
      "inhibited-notification": "Û∞Çõ",
      "inhibited-none": "Û∞™ë",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞™ë",
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true,
  },
}
